{% extends 'HackzillaPasswordGeneratorBundle::layout.html.twig' %}

{% block layout %}
    {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_rest(form) }}

        <input type="submit" value="Generate">
    {{ form_end(form) }}

    {% if passwords %}
        {% for password in passwords %}
            {{ password }}<br>
        {% endfor %}
    {% endif %}
{% endblock layout %}
