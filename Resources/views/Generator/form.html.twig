{% extends 'HackzillaPasswordGeneratorBundle::layout.html.twig' %}

{% block layout %}
    <h2>Create Passwords</h2>
    {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_rest(form) }}

        <div class="actions">
            <input type="submit" class="btn btn-primary" value="Generate">
            <input type="reset" class="btn btn-warning" value="Reset">
        </div>
    {{ form_end(form) }}

    {% if passwords %}
        <div class="passwords">
            <h2>Passwords</h2>
            <ul>
            {% for password in passwords -%}
                <li>{{ password }}</li>
            {% endfor %}
            </ul>
        </div>
    {% endif %}
{% endblock layout %}
